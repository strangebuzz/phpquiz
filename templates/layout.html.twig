<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}PHPQuiz: test your PHP knowledge with really hard quiz.{% endblock %}</title>
        {% block links %}
        <link rel="canonical" href="{% block canonical %}{{ app.request.uri }}{% endblock %}" title="canonical" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="preconnect" href="{{ preconnect('https://pbs.twimg.com') }}" />
        {% endblock %}
        <meta name="jsapp" content="{% block jsapp %}app{% endblock %}">
        <meta name="description" content="{% block description %}{{ block('title') }} Learn new things about PHP and improve yourself to be a better developper.{% endblock %}" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="{{ block('canonical') }}" />
        <meta property="og:title" content="{{ block('title') }}" />
        <meta property="og:description" content="{{ block('description') }}" />
        <meta property="og:site_name" content="{{ app_name }}" />
        <meta property="og:locale" content="{{ app.request.locale }}" />
        <meta property="og:image" content="{% block og_image %}{{ absolute_url('/android-chrome-512x512.png') }}{% endblock %}" />
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@{{ twitter }}" />
        <meta name="twitter:creator" content="@{{ twitter }}" />
        <meta name="twitter:url" content="{{ block('canonical') }}" />
        <meta name="twitter:title" content="{{ block('title') }}" />
        <meta name="twitter:description" content="{{ block('description') }}" />
        <meta name="twitter:image" content="{{ block('og_image') }}" />
        {% block stylesheets %}
            {{ encore_entry_link_tags(block('jsapp')) }}
        {% endblock %}
    </head>
    <body>
        <div id="layout">
            <a href="#menu" id="menuLink" class="menu-link">
                <span></span>{# Hamburger icon #}
            </a>

            <div id="menu">
                <div class="pure-menu">
                    <a class="pure-menu-heading" href="{{ path('home') }}">PHP Quiz üêò</a>

                    <ul class="pure-menu-list">
                        <li class="pure-menu-item{{ app.request.get('_route') == 'home' ? ' pure-menu-selected' : '' }}"><a href="{{ path('home') }}" class="pure-menu-link">Home</a></li>
                        <li class="pure-menu-item{{ app.request.get('_route') == 'question_last' ? ' pure-menu-selected' : '' }}"><a href="{{ path('question_last') }}" class="pure-menu-link">Last quiz</a></li>
                        <li class="pure-menu-item{{ app.request.get('_route') == 'question_random' ? ' pure-menu-selected' : '' }}"><a href="{{ path('question_random') }}" class="pure-menu-link">Random quiz</a></li>
                        <li class="pure-menu-item{{ app.request.get('_route') == 'question_show' ? ' pure-menu-selected' : '' }}"><a href="{{ path('question_show', {id: 1}) }}" class="pure-menu-link">All quiz</a></li>
                        <li class="pure-menu-item{{ app.request.get('_route') == 'about' ? ' pure-menu-selected' : '' }}"><a href="{{ path('about') }}" class="pure-menu-link">About</a></li>
                        <li class="pure-menu-item"><a target="_blank" href="https://github.com/strangebuzz/phpquiz" class="pure-menu-link">GitHub</a></li>
                    </ul>
                </div>
            </div>

            <div id="main">
                {% block body %}{% endblock %}
            </div>
        </div>

        {% block javascripts %}
            <script src="{{ preload(asset('js/ui.js'), {as: 'script'}) }}"></script>
            {{ encore_entry_script_tags(block('jsapp')) }}
        {% endblock %}
    </body>
</html>
